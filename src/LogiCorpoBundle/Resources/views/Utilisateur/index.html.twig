{% extends '::layout.html.twig' %}
{% set subtitle = 'Liste des utilisateurs' %}
{% block head %}
{{parent()}}
<a href="{{path('lc_utilisateur_new')}}" class="btn">Nouvel utilisateur</a>
<p>Cliquez sur un utilisateur pour le modifier.</p>
{% endblock %}
{% block content %}
	
	<table class="table" width="100%">
		<thead>
			<tr>
				<td>Nom</td>
				<td>Login</td>
				<td>Rang</td>
				<td>Solde</td>
				<td width="200px">Action</td>
			</tr>
		</thead>
		<tbody>
			{% for utilisateur in utilisateurs %}
				<tr onclick="location.href='{{ path('lc_utilisateur_editer', {'id': utilisateur.id}) }}'">
					<td>{{utilisateur.nom | upper}} {{utilisateur.prenom | title}}</td>
					<td>{{utilisateur.username}}</td>
					<td>{{utilisateur.rang.nom | title}}</td>
					<td><span class="solde:{{utilisateur.solde}}"></span></td>
					<td><a href="{{path('lc_utilisateur_solde',{'id':utilisateur.id})}}" class="btn">Créditer/débiter</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
