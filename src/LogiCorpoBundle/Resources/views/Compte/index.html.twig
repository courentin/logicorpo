{% extends '::layout.html.twig' %}
{% set subtitle = 'Mon compte' %}
{% block head %}
{{parent()}}
<a href="{{path('lc_compte_mdp')}}" class="btn">Changer de mot de passe</a>
	{% if canUpgrade %}
	<a href="{{path('lc_compte_upgrade')}}" class="btn">Devenir membre (5,00 €)</a>
	{% endif %}
{% endblock%}
{% block content %}
	<h2 class="content-title">Historique</h2>
	<br/>
	<br/>
	<table class="table" width="100%">
		<thead>
			<tr>
				<td>Date</td>
				<td>Motif</td>
				<td>Montant</td>
			</tr>
		</thead>
		<tbody>
			{% for transaction in transactions %}
			<tr>
				<td>{{transaction.date | date('d/m à h\\hi')}}</td>
				<td>{{transaction.type}}</td>
				<td>[[ {{transaction.solde}} | currency ]]</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
