{% extends '::layout.html.twig' %}
{% set subtitle = 'Service de ' ~ (service.debut | date("H\\hi")) %}
{% block head %}
{{parent()}}
<h2></h2>
{% endblock %}
{% block content %}

{% for commande in service.commandes %}


	<div class="commande">
		<div class="commande-infos">
			<div class="commande-user">
				{{ commande.utilisateur }}
				<a href="#" class="user-solde "{{ commande.utilisateur.solde }}</a>
			</div>
			<div class="commande-tools">
				<a><img src="img/icons/modifier.svg"></a>
				<a><img src="img/icons/money.svg"></a>
			</div>
			<div class="commande-price">3,00 â‚¬</div>
		</div>
		<div class="commande-products">
			<ul>
				{% for produit in commande.produits %}
				<li><span>{{ produit.quantite }}</span>{{ produit.produit.libelle }}</li>
				{% endfor %}
			</ul>
		</div>
			<button class="commande-toggle">
				<img src="img/icons/down.svg">
			</button>
	</div>
{% endfor %}

{% endblock %}
