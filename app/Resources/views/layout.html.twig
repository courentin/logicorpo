{% set title = 'logiCorpo' %}
<!doctype html>
<html ng-app="logicorpo">
<head>
	<meta charset="utf-8">
	<title>{% block title %}{{title}}
			{% if subtitle is defined %} - {{ subtitle}}{% endif %}
	{% endblock %}</title>
	
	<link rel="icon" type="image/png" href="{{ asset('/public/img/favicon.png') }}" />

	{% block stylesheets %}
	<link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="{{asset('/public/css/app.css')}}">
	{% endblock %}

	{% block javascripts %}
	<script src="{{ asset('/public/js/angularjs-1.3.16.min.js') }}"></script>
		<script src="{{ asset('/public/js/chartjs/Chart.min.js') }}"></script>
	<script src="{{ asset('/public/js/chartjs/angular-chart.min.js') }}"></script>
	<script src="{{ asset('/public/js/angular-cookies.js') }}"></script>
	<script src="{{ asset('/public/js/angular-locale_fr-fr.js') }}"></script>
	<script src="{{ asset('/public/js/angular/MainCtrl.js') }}"></script>
	<script src="{{ asset('/public/js/angular/Directives.js') }}"></script>
	{% endblock %}
</head>
<body ng-controller="MainCtrl">

	{% for type, message in app.session.flashbag.all %}
		<flash type="{{ type }}">{{ message[0] }}</flash>
	{% endfor %}

	{{ render(controller("LogiCorpoBundle:Default:menu")) }}

	<section class="content">
		<header>
		{%block head %}
			<h1 class="content-title">{{ subtitle }}</h1>
		{% endblock %}
		</header>
		{% block content %}{% endblock %}

	</section>
</body>
</html>